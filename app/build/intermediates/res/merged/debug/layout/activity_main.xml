<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.uk.inspection.MainActivity"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff"
        android:theme="@style/AppTheme"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="10dp"
        >
    </android.support.v7.widget.Toolbar>





    <Button
        android:id="@+id/buttonAddInspector"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Add Inspector"
        android:background="@drawable/buttonborder"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_above="@+id/buttonAddProperty"
        android:layout_alignLeft="@+id/buttonAddProperty"
        android:layout_alignStart="@+id/buttonAddProperty"
        android:layout_marginBottom="50dp"
        />



    <Button
        android:id="@+id/buttonAddProperty"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Add Property"
        android:background="@drawable/buttonborder"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/buttonManageProperties"
        android:layout_alignStart="@+id/buttonManageProperties" />

    <Button
        android:id="@+id/buttonManageProperties"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Manage Property"
        android:background="@drawable/buttonborder"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@+id/buttonAddProperty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

</RelativeLayout>
