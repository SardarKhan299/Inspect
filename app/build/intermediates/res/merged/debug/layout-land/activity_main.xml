<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.uk.inspection.MainActivity"
     >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        >
    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/buttonAddProperty"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Add Property"
        android:layout_below="@+id/toolbar"
        android:layout_alignLeft="@+id/buttonManageProperties"
        android:layout_alignStart="@+id/buttonManageProperties" />

    <Button
        android:id="@+id/buttonManageProperties"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAddProperty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Manage Property" />

</RelativeLayout>
