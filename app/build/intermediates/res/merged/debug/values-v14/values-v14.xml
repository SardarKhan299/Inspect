<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <!-- colorPrimary is used for coloring the Toolbar -->
        <item name="colorPrimary">@color/toolbar</item>
        <!-- colorPrimaryDark is used for coloring the status bar -->
        <item name="colorPrimaryDark">@color/yellow</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/black_color</item>

        <item name="android:colorBackground">@color/OverFlowMenuPopupBackground</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorForeground">@color/foreground_material_dark</item>
        <item name="android:textColorSecondary">@color/yellow</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondaryInverse">@android:color/black</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="android:textColorPrimaryDisableOnly">@android:color/black</item>

        <!-- Styles -->
        <item name="android:spinnerStyle">@style/SpinnerStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>


    <!--&lt;!&ndash;customize context action bar (CAB) &ndash;&gt;-->
        <item name="windowActionModeOverlay">true</item>
        <!--<item name="actionModeStyle">@style/LStyled.ActionMode</item>-->
        <!--<item name="android:titleTextStyle">@style/LStyled.ActionMode</item>-->
        <!--<item name="android:subtitleTextStyle">@style/LStyled.ActionMode</item>-->
        <!--<item name="android:actionModeCloseButtonStyle">@style/LStyled.ActionMode</item>-->

    </style>
    <style name="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
    <style name="LStyled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@android:color/white</item>

    </style>
    <style name="MyCoustomContextActionBarTheme" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:textColor">@color/yellow</item>
        <item name="background">@color/yellow</item>

    </style>
    <style name="MyCoustomToolBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">Tempsitc</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Platform.AppCompat" parent="Platform.V14.AppCompat"/>
    <style name="Platform.AppCompat.Light" parent="Platform.V14.AppCompat.Light"/>
    <style name="Platform.V14.AppCompat" parent="Platform.V11.AppCompat">
        <item name="android:actionModeSelectAllDrawable">?actionModeSelectAllDrawable</item>

        <item name="android:listPreferredItemPaddingLeft">@dimen/abc_list_item_padding_horizontal_material</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/abc_list_item_padding_horizontal_material</item>
    </style>
    <style name="Platform.V14.AppCompat.Light" parent="Platform.V11.AppCompat.Light">
        <item name="android:actionModeSelectAllDrawable">?actionModeSelectAllDrawable</item>

        <item name="android:listPreferredItemPaddingLeft">@dimen/abc_list_item_padding_horizontal_material</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/abc_list_item_padding_horizontal_material</item>
    </style>
    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@android:color/white</item>
    </style>
    <style name="SpinnerStyle" parent="AppTheme">
        <item name="android:color">@color/yellow</item>
    </style>
    <style name="TextAppearance.StatusBar.EventContent" parent="@android:style/TextAppearance.StatusBar.EventContent"/>
    <style name="TextAppearance.StatusBar.EventContent.Info"/>
    <style name="TextAppearance.StatusBar.EventContent.Line2">
        <item name="android:textSize">@dimen/notification_subtext_size</item>
    </style>
    <style name="TextAppearance.StatusBar.EventContent.Time"/>
    <style name="TextAppearance.StatusBar.EventContent.Title" parent="@android:style/TextAppearance.StatusBar.EventContent.Title"/>
</resources>