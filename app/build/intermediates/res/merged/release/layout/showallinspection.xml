<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentLayout"
    
     >


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff"
        android:theme="@style/AppTheme"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewDelete"
            android:src="@drawable/ic_action_trash"
             />
    </android.support.v7.widget.Toolbar>

     <ListView
        android:id="@+id/listViewShowAllInspectionList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
         android:divider="@color/yellow"
        android:dividerHeight="2dp"
        android:padding="10dp"
        android:layout_marginTop="60dp"
         android:layout_below="@+id/toolbar"
         android:listSelector="@drawable/listitemselector"
         >
    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You donot have any inspection Yet Please add"
        android:id="@+id/textViewEmptyShowAllInspection"
        android:layout_gravity="center" />




</FrameLayout>
