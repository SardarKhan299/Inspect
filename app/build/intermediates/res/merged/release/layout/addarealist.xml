<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff"
        android:theme="@style/AppTheme"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        >
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="New Blank Section "
        android:layout_below="@+id/toolbar"
        android:id="@+id/textviewNewBlankArea"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bottomborder"

        />


    <ListView
        android:id="@+id/listViewShowAllAreas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:dividerHeight="2dp"
        android:padding="10dp"
        android:layout_below="@+id/textviewNewBlankArea"
        android:divider="@color/yellow"
        android:listSelector="@drawable/listitemselector"


        >
    </ListView>




</RelativeLayout>