<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
    </style>



    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <!-- colorPrimary is used for coloring the Toolbar -->
        <item name="colorPrimary">@color/toolbar</item>
        <!-- colorPrimaryDark is used for coloring the status bar -->
        <item name="colorPrimaryDark">@color/yellow</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/black_color</item>

        <item name="android:colorBackground">@color/OverFlowMenuPopupBackground</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorForeground">@color/foreground_material_dark</item>
        <item name="android:textColorSecondary">@color/yellow</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondaryInverse">@android:color/black</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="android:textColorPrimaryDisableOnly">@android:color/black</item>

        <!-- Styles -->
        <item name="android:spinnerStyle">@style/SpinnerStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="android:popupBackground">@null</item>

        <!--customize context action bar (CAB) -->
        <item name="windowActionModeOverlay">true</item>


