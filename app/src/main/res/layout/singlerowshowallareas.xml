<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewSingleRowShowAllAreas"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewArea"
        android:layout_toEndOf="@+id/imageViewArea"
        android:paddingBottom="5dp"
        android:layout_toLeftOf="@+id/deleteLayout"
        android:layout_margin="10dp"
        android:textSize="30sp"
        android:textColor="@android:color/black"


        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewArea"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_action_cancel"
        android:layout_margin="10dp"
        />
<LinearLayout
    android:layout_width="100dp"
    android:layout_height="80dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:id="@+id/deleteLayout"
    android:background="@android:color/background_dark"
    tools:targetApi="ice_cream_sandwich">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="Delete"
        android:id="@+id/buttonDelete"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_action_trash"
        />

</LinearLayout>

</RelativeLayout>